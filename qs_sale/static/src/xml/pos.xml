<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="custom_pos_receipt.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='pos-receipt-contact']" position="inside">
            <t t-if='receipt.client'>
                <strong>
                    <t t-foreach="receipt.orderlines" t-as="line" t-key="line.id">
                        <t t-if='line.note_client'>
                            <t t-set="note" t-value="line.note_client"/>
                            <div>Note:
                                <t t-esc='note'/>
                            </div> 
                        </t>
                    </t>
                </strong>
            </t>
        </xpath>
    </t>
</templates>